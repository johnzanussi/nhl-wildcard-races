---
import { type TeamStanding } from '@/data/Standings';

import Logo from '@/components/Team/Logo.astro';
import TeamName from '@/components/TeamName.astro';
import TeamSchedule from '@/components/TeamSchedule.astro';
import Stats from '@/components/Team/Stats.astro';

type Props = {
    team: TeamStanding;
};

const { team } = Astro.props;

const stats = [
    {
        label: 'Total Points',
        stat: team.points,
    },
    {
        label: 'Games Remaining',
        stat: team.gamesRemaining,
    },
    {
        label: 'Regulation Wins',
        stat: team.regulationWins,
    },
    {
        label: 'Potential Points',
        stat: team.gamesRemaining * 2,
    }
];

const getPlaceLabel = (team: TeamStanding) => {
    if (team.isInPlayoffs) {
        return `${team.divisionName} ${team.divisionPlace}`;
    } else if (team.isInWildCard) {
        return `Wild Card ${team.wildCardPlace}`;
    }
    return `${team.pointsBack} point${team.pointsBack === 1 ? '' : 's'} back`;
}


const cardClass = {
    'px-3 md:px-6 bg-base-300 text-base-content': true,
    'playoff-team': team.isInPlayoffs,
    'opacity-50': team.isEliminated,
};
---

<div class:list={[
    'py-6 w-full sticky left-0 z-10 rounded-t-md',
    cardClass,
]}>

    <div
        class:list={[
            '-mx-6 -mt-6 mb-2 font-bold text-xs uppercase text-white rounded-t-md py-1 px-6',
            {
                'bg-green-900': team.isInPlayoffs,
                'bg-cyan-800': team.isInWildCard,
                'bg-red-900': !team.isInWildCard && !team.isInPlayoffs,
            },
        ]}
        >
        {getPlaceLabel(team)}
    </div>

    <div class="flex items-center space-x-2 justify-between">

        <div class="flex items-center">

            <Logo teamCode={team.teamCode} />

            <TeamName teamCode={team.teamCode} />

        </div>

        <Stats data={stats} />

        <div class="w-3 h-[100px] absolute left-0 top-[100%] bg-base-300"></div>
        <div class="w-3 h-[100px] absolute right-0 top-[100%] bg-base-300"></div>

    </div>

</div>

<div class:list={[
    'pb-6 w-[fit-content] mb-4 rounded-b-md',
    cardClass
]}>
    <TeamSchedule
        teamCode={team.teamCode}
        points={team.points}
    />
</div>
