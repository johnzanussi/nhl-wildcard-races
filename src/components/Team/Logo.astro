---
import { Image } from 'astro:assets';
import { type TeamCode } from '@/data/nhl';
import { type LogoType, getTeamLogoUrl, getTeamName } from '@/data/Teams.ts';

type Props = {
    teamCode: TeamCode;
    type?: LogoType;
};

const {
    teamCode,
    type
} = Astro.props;

const imageUrl = getTeamLogoUrl(teamCode, type);
const teamName = getTeamName(teamCode);
---

<Image
    src={imageUrl}
    alt={teamName}
    width="100"
    height="67"
    loading="lazy"
    class="inline w-[50px]"
/>
